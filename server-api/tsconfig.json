{
    "extends": "@tsconfig/node18-strictest/tsconfig.json",
    "include": [ "src/**/*" ],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",

        "removeComments": true,
        "resolveJsonModule": true,

        "noUnusedParameters": false,
        "exactOptionalPropertyTypes": false
    },
    "watchOptions": {
        "excludeDirectories": [ "node_modules", "../node_modules" ]
    }
}
